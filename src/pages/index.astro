---
import Layout from '../layouts/Layout.astro'
import ProjectCard from '../components/ProjectCard.astro'
import { projects } from '../utils/projectData'
import { getCollection } from 'astro:content'
import { getFeaturedPosts } from '../utils/helper'

const posts = await getCollection('blog')
const featured_posts = getFeaturedPosts(posts)
---

<Layout title='thatarif.in'>
  <section class=''>
    <h1 class='text-4xl font-fun font-medium text-text_primary'>Arif Imran</h1>
    <span class='text-sm italic text-text_secondary'
      >aarif-imran (not aerif-imren)</span
    >
    <p class='mt-2 text-text_secondary'>
      Passionate software developer specializing in building modern,
      user-friendly web applications with a focus on creating intuitive
      interfaces and exceptional user experiences
    </p>
  </section>

  <section class='mt-4 space-y-5'>
    <div class='flex items-center gap-2'>
      <span class='inline-block w-3 h-3 bg-green-300 rounded-full'></span>
      <p class='text-text_primary'>Available for sde intern roles</p>
    </div>
    <div class='flex items-center gap-4'>
      <button
        class='text-text_secondary mt-2 py-2 bg-gray-800/80 rounded-md px-3 hover:bg-gray-700 duration-50 ease-out'
      >
        <a
          class='flex items-center gap-2'
          target='_blank'
          rel='noopener'
          href='mailto:arifimran505@gmail.com'
        >
          <span>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='20'
              height='20'
              viewBox='0 0 20 20'
              ><path
                fill='currentColor'
                fill-rule='evenodd'
                d='m7.172 11.334l2.83 1.935l2.728-1.882l6.115 6.033c-.161.052-.333.08-.512.08H1.667c-.22 0-.43-.043-.623-.12l6.128-6.046ZM20 6.376v9.457c0 .247-.054.481-.15.692l-5.994-5.914L20 6.376ZM0 6.429l6.042 4.132l-5.936 5.858A1.663 1.663 0 0 1 0 15.833V6.43ZM18.333 2.5c.92 0 1.667.746 1.667 1.667v.586L9.998 11.648L0 4.81v-.643C0 3.247.746 2.5 1.667 2.5h16.666Z'
              >
              </path>
            </svg>
          </span>
           Get in touch
        </a>
      </button>

      <p class='text-text_secondary relative'>
        <a
          target='_blank'
          rel='noopener'
          href='https://docs.google.com/document/d/12cyOOT7KD7-ysgOX5tEchDXWAcgnNMIjW4XHYMxCG1g/edit?usp=sharing'
        >
          Resume <span class='absolute top-[1px] ml-1'>â†—</span></a
        >
      </p>
    </div>
  </section>

  <section class='mt-8'>
    <h1 class='text-xl text-text_primary'>Blogs</h1>
    <div class='mt-4'>
      {
        featured_posts.map((post) => (
          <div class='mt-5 group'>
            <a href={`/posts/${post.data.postSlug}`}>
              <h2 class='text-text_primary group-hover:text-accent'>
                {post.data.title}
              </h2>
              <p class='mt-1 text-text_secondary'>{post.data.description}</p>
            </a>
          </div>
        ))
      }
    </div>
    <a
      class='inline-block mt-3 italic underline text-accent'
      href='/posts'
      aria-label='More blogs'>more..</a
    >
  </section>
  <section class='mt-8' transition:name='projects'>
    <h1 class='text-xl text-text_primary'>Projects</h1>
    <div class='mt-4'>
      {projects.slice(0, 3).map((p) => <ProjectCard project={p} />)}
    </div>
    <a
      class='inline-block mt-3 italic underline text-accent'
      href='/projects'
      aria-label='More Projects'>more..</a
    >
  </section>
</Layout>

