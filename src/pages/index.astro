---
import Layout from '@layouts/Layout.astro'
import ProjectCard from '@components/ProjectCard.astro'
import { projects } from '@utils/projectData'
import { getCollection } from 'astro:content'
import { getFeaturedPosts } from '@utils/helper'

export const prerender = true

const posts = await getCollection('blog')
const featured_posts = getFeaturedPosts(posts)
---

<Layout title='thatarif'>
  <section class=''>
    <h1 class='text-4xl font-fun font-medium text-text_primary'>Arif Imran</h1>
    <span class='text-sm italic font-round text-text_secondary'
      >aarif-imran ( not aerif-imren :')</span
    >
    <p class='mt-2 text-text_secondary font-round'>
      software developer who loves to create modern and user-friendly web
      applications. I have a knack for designing intuitive interfaces and
      delivering exceptional user experiences
    </p>
  </section>

  <section class='mt-4 space-y-5 font-round'>
    <div class='flex items-center gap-2'>
      <span class='inline-block w-3 h-3 bg-green-300 rounded-full'></span>
      <p class='text-text_primary'>Available for sde/frontend intern roles</p>
    </div>
    <div class='flex items-center gap-4'>
      <div class='cta_container mt-2'>
        <a
          class='flex items-center gap-2 text-black py-2 px-3 cta_contact'
          target='_blank'
          rel='noopener'
          href='mailto:arifimran505@gmail.com'
        >
          <span class='text-gray-700'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='20'
              height='20'
              viewBox='0 0 20 20'
              ><path
                fill='currentColor'
                fill-rule='evenodd'
                d='m7.172 11.334l2.83 1.935l2.728-1.882l6.115 6.033c-.161.052-.333.08-.512.08H1.667c-.22 0-.43-.043-.623-.12l6.128-6.046ZM20 6.376v9.457c0 .247-.054.481-.15.692l-5.994-5.914L20 6.376ZM0 6.429l6.042 4.132l-5.936 5.858A1.663 1.663 0 0 1 0 15.833V6.43ZM18.333 2.5c.92 0 1.667.746 1.667 1.667v.586L9.998 11.648L0 4.81v-.643C0 3.247.746 2.5 1.667 2.5h16.666Z'
              >
              </path>
            </svg>
          </span>
           Get in touch
        </a>
      </div>
      <a
        target='_blank'
        rel='noopener'
        href='https://docs.google.com/document/d/12cyOOT7KD7-ysgOX5tEchDXWAcgnNMIjW4XHYMxCG1g/edit?usp=sharing'
        class='text-text_secondary mt-2 py-2 ring-2 ring-gray-700/50 relative bg-gray-800/80 flex justify-center gap-2 items-center rounded-md px-3 hover:bg-gray-700 duration-100 ease-out'
      >
        Resume
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='14'
          height='14'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-move-up-right'
          ><path d='M13 5H19V11'></path><path d='M19 5L5 19'></path></svg
        >
      </a>
    </div>
  </section>

  <section class='mt-8 font-round'>
    <h1 class='text-xl text-text_primary'>Blogs</h1>
    <div class='mt-4'>
      {
        featured_posts.map((post) => (
          <div class='mt-5 group'>
            <a href={`/posts/${post.data.postSlug}`}>
              <h2 class='text-text_primary group-hover:text-accent'>
                {post.data.title}
              </h2>
              <p class='mt-1 text-text_secondary'>{post.data.description}</p>
            </a>
          </div>
        ))
      }
    </div>
    <a
      class='inline-block mt-3 italic underline text-accent'
      href='/posts'
      aria-label='More blogs'>more..</a
    >
  </section>
  <section class='mt-8 font-round' transition:name='projects'>
    <h1 class='text-xl text-text_primary'>Projects</h1>
    <div class='mt-4'>
      {projects.slice(0, 3).map((p) => <ProjectCard project={p} />)}
    </div>
    <a
      class='inline-block mt-3 italic underline text-accent'
      href='/projects'
      aria-label='More Projects'>more..</a
    >
  </section>
</Layout>

<style>
  * {
    --from: rgba(222, 255, 132);
    --to: rgba(192, 220, 116, 0.8);
    /* --to: rgb(255, 132, 132); */
  }

  .cta_container {
    padding: 2px;
    border-radius: 8px;
    background: linear-gradient(var(--to), var(--from));
    box-shadow: 2px 2px 6px rgba(35, 35, 35, 0.158);
  }

  .cta_container:hover {
    background: linear-gradient(to bottom, var(--from), var(--to));
  }

  .cta_contact {
    border: none;
    border-radius: 6px;
    background: linear-gradient(var(--from), var(--to));
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    margin-top: 0;
  }

  .cta_contact:hover {
    background: linear-gradient(var(--to), var(--from));
    text-shadow: none;
  }
</style>
